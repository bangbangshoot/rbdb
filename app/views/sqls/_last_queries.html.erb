<% if !@sqls.empty? %>
  <div class="last_sql_queries">
    <h3>Last SQL queries <span>(<%= link_to 'see all', datab_sqls_path(@datab) %>)</span></h3>
    <ul>
      <% db = nil %>
      <% @sqls.sort_by {|a| a.db + a.id.to_s}.each do |sql| %>
        <% if db != sql.db %>
          <%= '</ul>' if db != nil %>
          <li title="#{sql.db}"><%= sql.db %></li>
          <ul>
          <% db = sql.db %>
        <% end %>
        <li>
          <%= link_to truncate(sql.body, 200), datab_sql_path(sql.db, sql.id) %>
          <br/><span class="infos">&rarr; <%= pluralize sql.num_rows, 'result' %></span>
        </li>
      <% end %>
      </ul>
    </ul>
  </div>
<% end %>
