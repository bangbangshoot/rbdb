<% case value
when nil %>
  -
<% when Fixnum %>
  <% if column.name == "id" %>
    <%= value %>
  <% else %>
    <%= number_with_delimiter value, '.' %>
  <% end %>
<% when DateTime, Time, Date %>
  <%= datetime value %>
<% when String %>
  <% content_tag 'span', :title => value do %>
    <%= truncate value, 20 %>
  <% end %>
<% when TrueClass, FalseClass %>
  <%= yes_no value %>
<% else %>
  <%= value.to_s %>
<% end %>
