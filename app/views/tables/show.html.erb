<%= @table.name %>

<% if @rows %>
	<table>
		<thead>
		<tr>
		<% for column in @columns %>
			<th><%= column.name %></th>
		<% end %>
		</tr>
		</thead>
		<tbody>
		<% for row in @rows %>
		<tr>
			<% for column in @columns %>
			<td>
			  <%= render :partial => "/tables/field", :locals => {
			    :value => row[column.name],
			    :column => column
			  } %>
			</td>
			<% end %>
		</tr>
		<% end %>
		</tbody>
	</table>
<% else %>
	<ul>
	<% for column in @columns %>
	<li><%= column.name %></li>
	<% end %>
	</ul>
	<%= link_to 'Browse', params.merge(:browse => '') %>
<% end %>


<%= link_to 'Edit', edit_table_path(@table) %>
